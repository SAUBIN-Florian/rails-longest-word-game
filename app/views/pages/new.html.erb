<div class="game-container">
  <ul class="new-ul">
    <% @letters.each do |letter| %>
      <li class="letter"><%= letter.capitalize %></li>
    <% end %>
  </ul>

  <form action="/score" method="POST" id="form">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="guess" class="form-input" placeholder="Guess your word here..">
    <input type="submit" value="Guess!" class="form-btn">
  </form>
</div>
